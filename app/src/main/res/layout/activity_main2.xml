<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/dwhite">

    <TextView
        android:id="@+id/tvLearnToday"
        android:layout_width="351dp"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:text="What would you like to learn today? ðŸ¤–"
        android:textColor="@color/teal"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDivider"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLearnToday"
        app:srcCompat="@drawable/line_divider" />

    <ImageView
        android:id="@+id/ivStartLearning"
        android:layout_width="323dp"
        android:layout_height="119dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivDivider"
        app:srcCompat="@drawable/start_learning" />

    <ImageView
        android:id="@+id/ivActivity"
        android:layout_width="323dp"
        android:layout_height="119dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStartLearning"
        app:srcCompat="@drawable/activity" />

    <ImageView
        android:id="@+id/ivNavigation"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/naviagtion" />

    <ImageView
        android:id="@+id/ivCamera"
        android:layout_width="398dp"
        android:layout_height="135dp"
        android:onClick="takePhoto"
        app:layout_constraintBottom_toTopOf="@+id/ivNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivActivity"
        app:layout_constraintVertical_bias="0.196"
        app:srcCompat="@drawable/camera" />


</androidx.constraintlayout.widget.ConstraintLayout>